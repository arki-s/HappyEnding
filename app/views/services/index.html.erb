<div class="container-services">
  <div>
  </div>

  <div class="cards-services">
    <% @services.each do |service| %>
        <%= link_to service_path(service), class:'text-decoration-none' do%>
    <div class="card-service">
      <div class="service-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= service.photo.attached? ? cl_image_path(service.photo.key) : "https://i1.sndcdn.com/avatars-UaKAHbGfoeypwb8c-qkYTMg-t240x240.jpg"%>)">
      </div>
      <div class="card-info">
        <div class="header">
        <p ><%= service.user.name %>,  <%= service.user.age %></p>
        </div>
        <p class="text-muted"><%= service.title %></p>
        <div class="location">
        <i class="fa-solid fa-location-dot"></i> <p class="text-muted"><%= service.user.location %></p>
        </div>
        <p>$<%= service.price %> per day</p>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
