<div class="banner">
  <%= video_tag "pexels-anton-antons-2035509-1920x1080-24fps.mp4", controls: false, autoplay: :autoplay, loop: :loop, muted: :muted %>
  <div class="container" id="banner-info">
    <h1>Happy Ending goes beyond a quick ending!</h1>
    <p>Change your life by meeting the best boyfriends and girlfriends.</p>
    <a class="btn btn-flat" href="#cards-services">Search now</a>
  </div>
</div>

<div class="container-services" id="services">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with(url: services_path, method: :get, class: "d-flex") do |form|%>
      <%= form.text_field :query, placeholder: "Type a keyword", class: "form-control"%>
      <%= form.number_field :min_price, placeholder: "Min Price", class: "form-control" %>
      <%= form.number_field :max_price, placeholder: "Max Price", class: "form-control" %>
      <%= form.submit "Search", class: "btn btn-primary" %>
      <% end %>
     </div>

    <div>
      <% if flash[:notice] %>
        <%= flash[:notice] %>
      <% end %>
    </div>
  </div>
</div>


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="cards-services" id="cards-services">
    <% @services.each do |service| %>
        <%= link_to service_path(service), class:'text-decoration-none' do%>
    <div class="card-service">
      <div class="service-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= service.photos.attached? ? cl_image_path(service.photos.first.key) : "https://i1.sndcdn.com/avatars-UaKAHbGfoeypwb8c-qkYTMg-t240x240.jpg"%>)">
      </div>
      <div class="card-info">
        <div class="header">
        <h4 ><%= service.user.name %>,  <%= service.user.age %></h4>
        </div>
        <p class="text-muted"><%= service.title %></p>
        <div class="location">
        <i class="fa-solid fa-location-dot" style="color: #511f37;"></i> <p class="text-muted"><%= service.user.location %></p>
        </div>
        <div class="price">
        <i class="fa-solid fa-dollar-sign" style="color: #511f37;"></i></i><%= service.price %>  per day</p>
        </div>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


</div>
